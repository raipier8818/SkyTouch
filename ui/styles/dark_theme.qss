/* 스크롤바 스타일 */
QScrollBar:vertical {
    background-color: rgba(45, 46, 50, 0.3);
    width: 8px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background-color: rgba(58, 59, 63, 0.6);
    border-radius: 4px;
    min-height: 16px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgba(74, 75, 79, 0.8);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* 라벨 스타일 */
QLabel {
    background: transparent;
    border: none;
    color: rgba(230, 230, 230, 0.8);
}

/* 프레임 스타일 */
QFrame {
    background: transparent;
    border: none;
}

/* 그룹박스 스타일 */
QGroupBox {
    background: transparent;
    border: none;
    font-weight: normal;
    color: rgba(230, 230, 230, 0.8);
}

QGroupBox::title {
    background: transparent;
    border: none;
    color: rgba(230, 230, 230, 0.8);
} 

/* 디버그 패널 전용 스타일 */
QGroupBox {
    border: 1px solid #555;
    border-radius: 5px;
    margin-top: 10px;
    padding-top: 10px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
}

QCheckBox {
    spacing: 8px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #555;
    border-radius: 3px;
    background-color: #2b2b2b;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border: 1px solid #0078d4;
}

QCheckBox::indicator:checked::after {
    content: "✓";
    color: white;
    font-weight: bold;
    margin-left: 2px;
}

/* 디버그 패널 전용 스타일 */
#DebugTitle {
    font-size: 14px;
    font-weight: bold;
    color: #ffffff;
}

#DebugTextEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555;
    border-radius: 5px;
    padding: 5px;
    font-family: "Consolas", "Monaco", monospace;
    font-size: 9px;
}

#DebugStatus {
    color: #888888;
    font-size: 10px;
    padding: 2px;
}

#DebugStats {
    color: #aaaaaa;
    font-size: 10px;
    padding: 2px;
    font-weight: 500;
} 